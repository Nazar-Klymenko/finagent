{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "baseUrl": "./src",
    "paths": {
      "controllers/*": ["controllers/"],
      "helpers/*": ["helpers/"],
      "middlewares/*": ["middlewares/"],
      "models/*": ["models/"],
      "routes/*": ["routes/"],
      "utils/*": ["utils/"],
      "databases": ["databases/"],
      "services/*": ["services"]
    },
    "checkJs": false,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "typeAcquisition": {
    "exclude": ["dotenv"]
  }
}
