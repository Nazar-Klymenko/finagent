{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "baseUrl": "src",
    "paths": {
      "controllers/*": ["controllers/*"],
      "helpers/*": ["helpers/*"],
      "middleware/*": ["middleware/*"],
      "models/*": ["models/*"],
      "routes/*": ["routes/*"],
      "utils/*": ["utils/*"],
      "databases": ["databases/*"],
      "services/*": ["services/*"]
    },
    "checkJs": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
  "typeAcquisition": {
    "exclude": ["dotenv"]
  }
}
